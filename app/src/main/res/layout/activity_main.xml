<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.olcayparlakx.saysal_beta.main">

    <RelativeLayout
        android:layout_width="425dp"
        android:layout_height="520dp"
        android:background="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="7dp">

        <Button
            android:id="@+id/ygs"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_alignLeft="@+id/lys"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/lys"
            android:layout_marginBottom="59dp"
            android:background="@drawable/ygss"
            app:layout_constraintBottom_toTopOf="@+id/lys"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/lys"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_above="@+id/ygs"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="71dp"
            android:layout_marginStart="71dp"
            android:background="@drawable/lyss"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ygs" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
